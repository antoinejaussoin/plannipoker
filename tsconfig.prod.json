{
  "compilerOptions": {
    "module": "es6",
    "target": "es5",
    "declaration": true,
    "outDir": "./dist",
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "lib": ["es2015", "es2017", "dom" ],
    "baseUrl": ""
  },
  "include": [
    "src/index.tsx"
  ],
  "exclude": [
    "./node_modules"
  ]
}
